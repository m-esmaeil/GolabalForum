@model Topics

@{
    ViewBag.Title = "Show details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="border: 0px; color:white; font-size:16px;" class="rounded-lg shadow" >
    <div class="jumbotron p-3 bg-info navbar-dark px-4 mb-0 d-flex" 
         style="border-top-left-radius: 10px;border-top-right-radius: 10px;border-bottom-left-radius: 0px;border-bottom-right-radius: 0px;">
        <strong class="">
            <i class="fas fa-book-open"></i>
                @Model.Subject
        </strong>
        <span class="ml-auto">
            <i class="fas fa-eye"></i>
            @Model.TotalViews
        </span>
    </div>
    <div class="row p-4 mt-0" style="color:black;">
        <div class="col-2">
            <div class="border rounded-lg text-center p-4">
                <i class="fas fa-user-tie mb-3" style="font-size:100px;"></i>
                <br />
                <span class="border-0 rounded-lg p-1 bg-light">@Model.Auther.Username</span>
            </div>
        </div>
        <div class="col-10">
            <div class="border rounded-lg p-3" style="min-height:150px;">
                @Model.Body
            </div>
        </div>
    </div>
</div>

<div style="border: 0px; color:white;" class="mt-4 rounded-lg shadow pb-3">
    <div class="jumbotron bg-success p-2 px-4 navbar-dark" 
         style="font-size: 14px;border-top-left-radius: 8px;border-top-right-radius: 8px;border-bottom-left-radius:0px;border-bottom-right-radius:0px;">
        <i class="fas fa-comment"></i>  <strong>Comments</strong>
    </div>
    @foreach (var comment in ViewBag.comments as IEnumerable<Comments>)
    {
        <div class="row px-5 mt-0 mb-5" style="color:black;">
            <div class="col-2" style="color:white;">
                <div class=" border rounded-lg text-center p-4 bg-dark">
                    <i style="font-size:40px; width:75px;" 
                       class="fas fa-user-tie mb-3 p-2 img-thumbnail bg-success"></i>
                    <br />
                    <span>@comment.Users.Username</span>
                </div>
            </div>
            <div class="col-10">
                <div class=" border border-dark rounded-lg p-4" style="min-height:200px;">
                    @comment.Body
                    <br />
                    <u class="text-right">@comment.CreatedAt</u>
                </div>
            </div>
        </div>
    }
</div>


