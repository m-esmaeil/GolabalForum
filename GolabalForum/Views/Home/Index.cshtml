
@model IPagedList<Categories>
@{
    ViewBag.Title = "Home Page";
}

<div class="border rounded-lg">
    <h4 class="jumbotron p-3 pl-4 mt-0 bg-info mb-2" style="color:white; border-radius:0px;">
        <i class="fas fa-bars"></i> Categories
    </h4>
    <div class="p-3">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark" style="background-color:#808080;">
                <tr>
                    <th>Category Name</th>
                    <th>Number of Topics</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Index","Topics",new { categoryId = item.Id})">
                            <i class="fas fa-chart-bar"></i>
                              @item.Name
                            </a>
                        </td>
                        <td>
                            @item.Topics.Count()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-center">
    @Html.PagedListPager(Model,(page)=> Url.Action("Index", new { page}))
</div>
